source "https://rubygems.org"

# Minimal Rails app using PostgreSQL
gem "rails", "~> 7.1"
gem "pg", ">= 1.1"
gem "puma", ">= 5.0"
gem "bootsnap", require: false
gem "sprockets-rails"
gem "tailwindcss-rails", "~> 3.3.1"
gem "dotenv-rails"

# Production logging
gem "lograge", "~> 0.14"

# Redis for caching and sessions
gem "redis", "~> 5.0"

group :development do
  gem "web-console"
  gem "listen"
end

